@if (Required)
{
    <div class="form-group">
        <label for=@Property class="form-label">@Label</label>
        <input type="text"
               class="form-control"
               id=@Property
               name=@Property
               placeholder=@Placeholder
               value=@Value
               maxlength=@MaxLenght
               required />
    </div>
}
else
{
    if (Readonly)
    {
        <div class="form-group">
            <label for=@Property class="form-label">@Label</label>
            <input type="text"
                   class="form-control"
                   id=@Property
                   name=@Property
                   placeholder=@Placeholder
                   value=@Value
                   maxlength=@MaxLenght
                   readonly
                   disabled />
        </div>
    }
    else
    {
        <div class="form-group">
            <label for=@Property class="form-label">@Label</label>
            <input type="text"
                   class="form-control"
                   id=@Property
                   name=@Property
                   placeholder=@Placeholder
                   value=@Value
                   maxlength=@MaxLenght />
        </div>
    }

}


@code {
    [Parameter, EditorRequired]
    public string Property { get; set; } = default!;
    [Parameter, EditorRequired]
    public string Label { get; set; } = default!;
    [Parameter]
    public string Placeholder { get; set; } = default!;
    [Parameter]
    public object Value { get; set; } = default!;
    [Parameter]
    public int? MaxLenght { get; set; } = default!;
    [Parameter]
    public bool Required { get; set; } = default!;
    [Parameter]
    public bool Readonly { get; set; } = default!;
}
